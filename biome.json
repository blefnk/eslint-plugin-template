{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "ignore": ["build/**/*", "dist/**/*", "node_modules/**/*"],
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": false
  }
}
